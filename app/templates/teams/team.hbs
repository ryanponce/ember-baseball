<div class="flex items-center justify-between">
  <h2 class="mb-8 capitalize">{{model.name}}</h2>

  <div>
    {{#link-to "teams.edit" model.id}}
      Edit Team
    {{/link-to}}

    <button {{action 'deleteTeam' model}} class="ml-4">
      Delete Team
    </button>
  </div>
</div>

<div class="mb-8 flex flex-col">
  <h3 class="mb-4">Team Information</h3>

  <div class="flex flex-row">
    <p>Mascot:</p>
    <p class="capitalize">{{model.mascot}}</p>

    <p>Primary Color:</p>
    <div>{{model.primaryColor}}</div>

    <p>Location:</p>
    <p>{{model.city}}, {{model.state}}</p>
  </div>
</div>

<div class="mb-8">
  <h3 class="mb-4">Team Roster</h3>

  <table class="w-full">
    <thead>
      <tr>
        <th>Name</th>
        <th>Date of Birth</th>
        <th>Age</th>
        <th>Number</th>
        <th>Position</th>
        <th>Batting Average</th>
        <th>Player Profile</th>
      </tr>
    </thead>

    <tbody>
      {{#each model.players as |player|}}
      <tr>
        <td>{{player.fullName}}</td>
        <td>{{moment-format player.dateOfBirth 'MM/DD/YYYY'}}</td>
        <td>{{moment-diff player.dateOfBirth now precision='years'}}</td>
        <td>{{player.number}}</td>
        <td>{{player.position}}</td>
        <td>{{player.battingAverage}}</td>
        <td>
          {{#link-to "players.player" player.id}} View More {{/link-to}}
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
