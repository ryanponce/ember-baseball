<h2 class="mb-4">{{model.name}}</h2>

<h3>Roster</h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date of Birth</th>
      <th>Number</th>
      <th>Position</th>
      <th>Batting Average</th>
    </tr>
  </thead>

  <tbody>
    {{#each model.players as |player|}}
      <tr>
        <td>{{player.fullName}}</td>
        <td>{{player.dateOfBirth}}</td>
        <td>{{player.number}}</td>
        <td>{{player.position}}</td>
        <td>{{player.battingAverage}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
