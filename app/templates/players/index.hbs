<h2>Players</h2>

{{#link-to "players.new"}} Create New Player {{/link-to}}

<label for="freeAgent">Show Free Agents</label>
{{input id="freeAgent" type="checkbox" checked=isFilteredByFreeAgent change=(action 'onFilterByFreeAgent') }}

<table class="w-full">
  <thead>
    <tr>
      <th>Name</th>
      <th>Team</th>
      <th>Date of Birth</th>
      <th>Age</th>
      <th>Number</th>
      <th>Position</th>
      <th>Batting Average</th>
      <th>Player Profile</th>
    </tr>
  </thead>

  <tbody>
    {{#each filteredPlayers as |player|}}
    <tr>
      <td>{{player.fullName}}</td>
      <td>{{player.team.name}}</td>
      <td>{{moment-format player.dateOfBirth 'MM/DD/YYYY'}}</td>
      <td>{{moment-diff player.dateOfBirth now precision='years'}}</td>
      <td>{{player.number}}</td>
      <td>{{player.position}}</td>
      <td>{{player.battingAverage}}</td>
      <td>
        {{#link-to "players.player" player.id}} View More {{/link-to}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>